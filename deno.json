{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "lock": false,
  "tasks": {
    "dev": "deno run -A src/main.ts tui",
    "cli": "deno run -A src/main.ts cli",
    "test": "deno test -A --fail-fast"
  },
  "importMap": "import_map.json",
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.ns", "esnext", "dom"],
  "jsx": "react-jsx",
  "jsxImportSource": "react"
  },
  "nodeModulesDir": "auto",
  "lint": {
    "rules": {
  "tags": ["recommended"],
  "exclude": ["no-explicit-any", "require-await"]
    },
    "files": {
      "include": ["src/", "tests/"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  }
}
