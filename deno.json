{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "lock": false,
  "tasks": {
    "dev": "deno run -A src/main.ts tui",
    "cli": "deno run -A src/main.ts cli",
    "test": "deno test -A --fail-fast"
  },
  "imports": {
    "@inkjs/ui": "npm:@inkjs/ui@^2.0.0",
    "midi-file": "npm:midi-file@^1.2.4",
    "react": "npm:react@18",
    "react/jsx-runtime": "npm:react@18/jsx-runtime",
    "npm:react": "npm:react@18",
    "ink": "npm:ink@4",
    "npm:ink": "npm:ink@4"
  },

  "compilerOptions": {
    "strict": true,
    "lib": ["deno.ns", "esnext", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "nodeModulesDir": "auto",
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "require-await"]
    },
    "files": {
      "include": ["src/", "tests/"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  }
}
